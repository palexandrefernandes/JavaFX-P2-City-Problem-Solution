<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.CreateUserController">
   <children>
      <Label text="Criar Utilizador">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
      <Label layoutX="10.0" layoutY="10.0" text="Email" />
      <TextField fx:id="email" />
      <Label text="Nome" />
      <TextField fx:id="name" />
      <Label text="Password" />
      <PasswordField fx:id="password" />
      <CheckBox fx:id="superAdmin" mnemonicParsing="false" text="Super Administrador" />
      <AnchorPane>
         <children>
            <Button mnemonicParsing="false" onAction="#onCreateClick" text="Criar" AnchorPane.bottomAnchor="0.0" AnchorPane.rightAnchor="0.0" />
         </children>
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </AnchorPane>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
